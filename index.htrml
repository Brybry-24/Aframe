<!DOCTYPE html>
<html>
  <head>
    <title>Custom AR.js Marker</title>
    <script src="https://aframe.io/releases/1.2.0/aframe.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ar.js@3.4.2/aframe/build/aframe-ar.min.js"></script>
    <style>
      body, html {
        margin: 0;
        overflow: hidden;
        height: 100%;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <a-scene
      embedded
      arjs="sourceType: webcam; debugUIEnabled: false;"
    >

    <a-assets>
            <a-asset-item id="myModel" src="trial13.glb"></a-asset-item>
        </a-assets>

      <!-- Custom Marker -->
      <a-marker type="pattern" url="huna1.patt">
        <a-box position="0 0.5 0" material="color: red;"></a-box>
            <a-entity
                gltf-model="#myModel"
                position="0 0 0"
                scale="0.7 0.5 0.5"
                rotation="-90 0 0"
                animation-mixer="clip: *; loop: repeat"
                shadow="cast: true; receive: false"
                material="color: #f9e9dc; envMapIntensity: 0.55; roughness: 0.9; metalness: 0">
            </a-entity>

            <!-- Lighting -->
            <a-light type="directional" color="#fff8e5" intensity="1.3" position="1.5 4 2"></a-light>
            <a-light type="directional" color="#ffffff" intensity="0.7" position="0 1.5 3"></a-light>
            <a-light type="hemisphere" color="#e6f7ff" ground-color="#f4f0e8" intensity="0.6"></a-light>
            <a-light type="ambient" color="#ffffff" intensity="0.3"></a-light>
      </a-marker>

      <a-entity camera></a-entity>
    </a-scene>
  </body>
</html>
